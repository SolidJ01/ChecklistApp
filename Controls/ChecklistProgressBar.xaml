<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="ChecklistApp.Controls.ChecklistProgressBar">
    <AbsoluteLayout BackgroundColor="{StaticResource ForegroundDark}"
                    BindingContext="{x:Reference this}">
        <Border BackgroundColor="{StaticResource Text}"
                StrokeShape="RoundRectangle 0,4,0,4"
                AbsoluteLayout.LayoutBounds="{Binding Progress, Converter={StaticResource FloatToProgress}}"
                AbsoluteLayout.LayoutFlags="SizeProportional">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger TargetType="Border" Binding="{Binding Progress}" Value="1">
                            <Setter Property="StrokeShape" Value="RoundRectangle 0,0,0,0" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
    </AbsoluteLayout>
</ContentView>
