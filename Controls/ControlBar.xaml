<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChecklistApp.Controls.ControlBar">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Frame Padding="10,0,10,10" 
                   Background="transparent"
                   CornerRadius="0">
                <Frame.Shadow>
                    <Shadow Brush="black"
                            Offset="0, -20"
                            Radius="40"
                            Opacity="0.8" />
                </Frame.Shadow>
                <ContentPresenter />
            </Frame>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
