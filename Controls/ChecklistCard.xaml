<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ChecklistApp.Controls"
             x:Name="this"
             x:Class="ChecklistApp.Controls.ChecklistCard">
    <Border BindingContext="{x:Reference this}"
           StrokeShape="RoundRectangle 8,8,8,8"
           StrokeThickness="0"
           Padding="0"
           HeightRequest="95">
        <Border.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding Command}" CommandParameter="{Binding Checklist.Id}" />
        </Border.GestureRecognizers>
        <Grid RowDefinitions="*, 8">
            <Border Background="{StaticResource ForegroundBrush}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger TargetType="Border" Binding="{Binding Checklist.Color}" Value="Cyan">
                                <Setter Property="Background" Value="{StaticResource ForegroundCyanBrush}" />
                            </DataTrigger>
                            <DataTrigger TargetType="Border" Binding="{Binding Checklist.Color}" Value="Blue">
                                <Setter Property="Background" Value="{StaticResource ForegroundBlueBrush}" />
                            </DataTrigger>
                            <DataTrigger TargetType="Border" Binding="{Binding Checklist.Color}" Value="Purple">
                                <Setter Property="Background" Value="{StaticResource ForegroundPurpleBrush}" />
                            </DataTrigger>
                            <DataTrigger TargetType="Border" Binding="{Binding Checklist.Color}" Value="Magenta">
                                <Setter Property="Background" Value="{StaticResource ForegroundMagentaBrush}" />
                            </DataTrigger>
                            <DataTrigger TargetType="Border" Binding="{Binding Checklist.Color}" Value="Red">
                                <Setter Property="Background" Value="{StaticResource ForegroundRedBrush}" />
                            </DataTrigger>
                            <DataTrigger TargetType="Border" Binding="{Binding Checklist.Color}" Value="Orange">
                                <Setter Property="Background" Value="{StaticResource ForegroundOrangeBrush}" />
                            </DataTrigger>
                            <DataTrigger TargetType="Border" Binding="{Binding Checklist.Color}" Value="Green">
                                <Setter Property="Background" Value="{StaticResource ForegroundGreenBrush}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid RowDefinitions="*, 28" Padding="15, 12,15,7">
                    <Label Text="{Binding Checklist.Name}"
                           TextColor="{StaticResource Text}"
                           FontSize="25"
                           FontAttributes="Bold"
                           VerticalTextAlignment="Start" />
                    <FlexLayout Grid.Row="1"
                                Direction="Row"
                                JustifyContent="SpaceBetween">
                        <Label Text="{Binding Checklist.CompletionStatus}"
                               TextColor="{StaticResource Text}"
                               FontSize="18"
                               FontAttributes="Bold"
                               VerticalTextAlignment="Center" />
                        <Border StrokeShape="RoundRectangle 6,6,6,6">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger TargetType="Border" Binding="{Binding Checklist.IsOverdue}" Value="true">
                                            <Setter Property="Background" Value="{StaticResource Text}" />
                                            <Setter Property="Padding" Value="10,0" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Border" Binding="{Binding Checklist.IsOverdue}" Value="false">
                                            <Setter Property="Background" Value="transparent" />
                                            <Setter Property="Padding" Value="0" />
                                        </DataTrigger>
                                        <MultiTrigger TargetType="Border">
                                            <MultiTrigger.Conditions>
                                                <BindingCondition Binding="{Binding Checklist.IsOverdue}" Value="true" />
                                                <BindingCondition Binding="{Binding Checklist.CompletionPercentage}" Value="1" />
                                            </MultiTrigger.Conditions>
                                            <Setter Property="IsVisible" Value="False" />
                                        </MultiTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Label Text="{Binding Checklist.DeadlineStatus}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   VerticalTextAlignment="Center">
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Style.Triggers>
                                            <DataTrigger TargetType="Label" Binding="{Binding Checklist.IsOverdue}" Value="true">
                                                <Setter Property="Text" Value="Overdue" />
                                                <Setter Property="TextColor" Value="{StaticResource Foreground}" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" Binding="{Binding Checklist.Color}" Value="Cyan">
                                                <Setter Property="TextColor" Value="{StaticResource ForegroundCyan}" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" Binding="{Binding Checklist.Color}" Value="Blue">
                                                <Setter Property="TextColor" Value="{StaticResource ForegroundBlue}" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" Binding="{Binding Checklist.Color}" Value="Purple">
                                                <Setter Property="TextColor" Value="{StaticResource ForegroundPurple}" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" Binding="{Binding Checklist.Color}" Value="Magenta">
                                                <Setter Property="TextColor" Value="{StaticResource ForegroundMagenta}" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" Binding="{Binding Checklist.Color}" Value="Red">
                                                <Setter Property="TextColor" Value="{StaticResource ForegroundRed}" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" Binding="{Binding Checklist.Color}" Value="Orange">
                                                <Setter Property="TextColor" Value="{StaticResource ForegroundOrange}" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" Binding="{Binding Checklist.Color}" Value="Green">
                                                <Setter Property="TextColor" Value="{StaticResource ForegroundGreen}" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" Binding="{Binding Checklist.IsOverdue}" Value="false">
                                                <Setter Property="TextColor" Value="{StaticResource Text}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                        </Border>
                    </FlexLayout>
                </Grid>
            </Border>
            <!--<Border Grid.Row="1" Background="{StaticResource ForegroundDarkBrush}"></Border>-->
            <controls:ChecklistProgressBar Grid.Row="1" Progress="{Binding Checklist.CompletionPercentage}" />
        </Grid>
    </Border>
</ContentView>
