<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ChecklistApp.Controls"
             x:Name="this"
             x:Class="ChecklistApp.Controls.ChecklistMetaEditor">
    <VerticalStackLayout BindingContext="{x:Reference this}">
        <controls:RoundedEntry Text="{Binding Name}" Placeholder="Title" />
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <controls:RoundedCheckbox Grid.Column="0" HeightRequest="50" IsChecked="{Binding UseDeadline}" BackgroundColorChecked="{StaticResource BackgroundBrush}" />
            <controls:DateTimePicker Grid.Column="1" Margin="10,0,0,0" Use="{Binding UseDeadline}" Value="{Binding Deadline}" />
        </Grid>
    </VerticalStackLayout>
</ContentView>
